{
  "manifest_version": 2,
  "name": "Selective User Agent Switcher",
  "version": "1.0",
  "description": "Switches user agents for specific websites.",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "58.0"
    }
  },
  "options_page": "options.html"
}
